{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-native",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "backend/src/server.js",
    "context/UserContext.js",
    "env.d.ts",
    "app",
    "src"
  ],
  "exclude": ["node_modules"]
}
